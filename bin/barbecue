alt_model_lookup = {
    'ha8810' : 'Unknown HA88XX',
    'ip1080' : 'Unknown IPXXXX',
    'hab800' : 'Unknown HAB8XX',
    'hab801' : 'Unknown HAB8XX',
}

alt_firmwares = (
    'ha8810_production',
    'ha8810_qa',
    'ip1080_production',
    'ip1080_qa',
    'hab800_production',
