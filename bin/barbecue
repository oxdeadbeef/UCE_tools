# def coalesce(*arg):
#     return reduce(lambda x, y: x if x is not None else y, arg)

def coalesce(*arg):
  for el in arg:
    if el is not None:
      return el
  return None

def modelFromFirmware(firmware):
    return re.split('_',firmware,2) 

def firmwareFromModelRelease(model, release):
    return model + '_' + release

